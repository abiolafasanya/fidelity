<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
    <style>
      html, body {
        height: 100%;
      }
      body {
        display: flex;
        flex-direction: column;
      }
      .content {
        flex: 1 0 auto;
      }
      .footer {
        flex-shrink: 0;
        display: none;
      }
      
      @media screen and (max-width: 999px) {
        aside {
          display: none;
          visibility: hidden;
        }
        .mobile-menu {
          display: flex;
          visibility: visible;
          padding-top: 2rem;
        }
        .footer { 
          display: block;
        }
      }
      .mobile-menu {
        display: none;
      }
      .nav-c:hover,
      .nav-c:focus,
      .nav-c:hover {
        background: #ffffff26 !important;
        transition: 0.5s ease-in-out;
        color: #ffc107 !important;
      }
    </style>
  </head>
  <body class="bg-light">
    <header><%- include('../partials/header'); %></header>

    <main class="content">
      <section class="row">
        <!-- side bar start here -->
        <%- include('../partials/d-sidebar') %>
        <!-- side bar end here -->

        <!-- dashboard content starts here -->
        <%- include('../partials/d-content') %>
        <!-- dashboard content ends here -->
      </section>
    </main>

    

    <footer class="footer">
      <section class="navbar border-top d-flex fixed-bottom w-100">
        <div class="w-100">
          <div class="w-100 bg-dark text-light">
            <ul class="navbar-nav d-flex flex-row justify-content-evenly align-items-sm-center">
              <li class="nav-item">
                <a href="/user/dashboard" class="nav-link nav-c align-items-center d-flex flex-column text-light">
                  <i class="fas fa-home"></i>
                  <span>Home</span>
                </a>
              </li>
              <li class="nav-item">
                <a href="/assignment" class="nav-link nav-c align-items-center d-flex flex-column text-light">
                  <i class="fas fa-tasks"></i>
                  <span>Assignment</span>
                </a>
              </li>
              <li class="nav-item">
                <a href="/assignment/submit" class="nav-link nav-c align-items-center d-flex flex-column text-light">
                  <i class="fas fa-book"></i>
                  <span>Resourses</span>
                </a>
              </li>
              <li class="nav-item">
                <a href="/assignment/notification" class="nav-link nav-c align-items-center d-flex flex-column text-light">
                  <i class="fas fa-bell"></i>
                  <span>Notification</span>
                </a>
              </li>
              <li class="nav-item">
                <a href="/assignment/settings" class="nav-link nav-c align-items-center d-flex flex-column text-light">
                  <i class="fas fa-cog"></i>
                  <span>Settings</span>
                </a>
              </li>
            </ul>
          </div>
        </div>
      </section>
      <%- include('../partials/foot'); %>
    </footer>
  </body>
</html>
