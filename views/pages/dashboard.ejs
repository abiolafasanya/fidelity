      <div class="w-100">
        <div class="w-100 bg-dark text-light">
          <ul class="navbar-nav d-flex flex-row justify-content-evenly align-items-sm-center">
            <li class="nav-item">
              <a href="/user/dashboard" class="nav-link nav-c text-light">
                <i class="fas fa-home"></i>
              </a>
            </li>
            <li class="nav-item">
