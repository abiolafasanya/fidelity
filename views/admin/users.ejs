<main>
  <div class="container">
    <div class="bg-light p-5 rounded">
      <h1 class="text-center">All Users</h1>
    </div>
    <div class="w-md-75 w-100 m-auto p-4 py-5">
      <!--  -->
      <section><%- include('../partials/messages'); %></section>

      <div class="row">
        <div class="col-12 text-blue lead py-2 fw-bold">List of Users</div>
      </div>
      <div class="row">
        <% users.forEach(user => { %>
              <ul class="list-group my-1">
                  <li class="list-group-item d-flex justify-content-between">
                      <div class="lead text-capitalize"><%= user.first_name %> <%= user.last_name %></div>
                      <div>
                          <button class="btn btn-primary">Edit</button>
                          <button class="btn btn-danger">Delete</button>
                      </div>
                  </li>
              </ul>
              <% }) %>
          </div>
     
    </div>
  </div>
</main>